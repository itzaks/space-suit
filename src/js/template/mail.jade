mixin content(classes)
  table.content(class=classes, align='center', border='0', cellpadding='0', cellspacing='0', width='520')
    tr: td: block

mixin column
  table.column(align='left', border='0', cellpadding='0', cellspacing='0', width='260')
    tr: td: block

mixin wrapper
  table.wrapper(align='center', border='0', cellpadding='0', cellspacing='0', width='100%')
    tr: td: block

case template
  when article
    include mail-article
  when article-text
    include mail-article-text
