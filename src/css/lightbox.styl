.lightbox-background
  fixed: top 0 left 0
  width: 100%
  height: 100%
  background: rgba(194, 194, 194, 0.5)

.lightbox-content
  fixed: top 20%
  left: 0
  right: 0
  max-width: 800px
  background: #fff
  margin: 0 auto
  padding: 1em

.lightbox-actions
  absolute: right 0.5em top 0.3em
  text-align: right

.is-prompt .lightbox-content
  max-width: 300px
  top: 30%
  .button, .button_group {margin-bottom: 0}
